smooth_numbers = np.linspace(min(numbers_list), max(numbers_list), 1000)
smooth_distances = np.interp(smooth_numbers, numbers_list, distances_list)

plt.plot(smooth_numbers, smooth_distances + 17000, color='blue', label='Curve', linewidth=2)  # Adding 17000 to shift the curve

plt.xlabel('Distance (Â)')
plt.ylabel('Energy (eV)')
plt.title('QM curve of NaCl', fontdict={'fontsize': 15, 'fontweight': 500, 'fontname': 'Arial', 'style': 'italic', 'color': '#FF0000'})
plt.ylim(-50, 50)
plt.xlim(0, 6)
plt.grid(True)

lowest_index = distances_list.index(min(distances_list))
lowest_x = numbers_list[lowest_index]
lowest_y = distances_list[lowest_index] + 17000  # Adding 17000 to shift the y-coordinate

# Annotate the lowest point with horizontal and vertical lines
plt.axhline(lowest_y, color='gray', linestyle='--')
plt.axvline(lowest_x, color='gray', linestyle='--')

# Add a label for the lowest value on the right side
plt.annotate(f'Lowest Energy\nx={lowest_x:.1f}\ny={lowest_y :.4f}',
             xy=(lowest_x, lowest_y),
             xytext=(lowest_x + 0.4, lowest_y - 35),  # Adjust y-coordinate to position label on the right
             arrowprops=dict(facecolor='black', shrink=0.05, width=1, headwidth=7))

plt.legend()
plt.show()    






A = 2314.700
p = 0.2903
C = 29.06

i = 3
i_list = []
result_list = []
while i < 20:
    r = i
    x = A * math.exp((-r) / p) - (C / r ** 6)
    result_list.append(x)
    i_list.append(i)
    i += 0.0005

plt.figure(figsize=(12, 5))  # Set the figure size (width, height)
plt.subplot(1, 2, 1)  # Create a subplot with 1 row and 2 columns, and select the first plot
plt.plot(i_list, result_list, color='red', linestyle='-', label='Line', linewidth=1.5)
plt.xlabel('Distance (Å)')
plt.ylabel('Energy (eV)')
plt.title('MM Curve of NaCl', fontdict={'fontsize': 15, 'fontweight': 500, 'fontname': 'Arial', 'style': 'italic', 'color': '#FF0000'})
plt.legend()
plt.grid(True)
plt.xlim(0, 25)  # Adjusted x-axis limit for the first plot
plt.ylim(-0.05, 0.05)

# Find the smallest value in the result_list
smallest_value = min(result_list)
smallest_index = result_list.index(smallest_value)
smallest_x = i_list[smallest_index]
smallest_y = smallest_value

# Annotate the lowest point with horizontal and vertical lines
plt.axhline(smallest_y, color='gray', linestyle='--')
plt.axvline(smallest_x, color='gray', linestyle='--')

# Add labels for the lowest Energy
plt.annotate(f"Min point: {smallest_x:.4f},{smallest_y:.4f}",
             xy=(smallest_x, smallest_y),
             xytext=(smallest_x + 2, smallest_y + -0.008),
             arrowprops=dict(facecolor='black', shrink=0.05, width=1, headwidth=7),
             fontsize=10,
             color='black')


